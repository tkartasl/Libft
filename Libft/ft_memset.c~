#include "libft.h"

void	*ft_memset(void *b, int c, size_t len)
{
	size_t			i;
	unsigned char	u;

	u = (unsigned char)c;
	i = 0;
	while (i < len)
	{
		(*(unsigned char *)b[i] = u);
		i++;
	}
	return (b);
}
